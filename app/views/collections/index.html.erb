<% content_for :title, t('collections.index.title') %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('collections.index.title') %></h1>
  </div>

  <div id="collections" class="mt-8">
    <% if @collections.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
        <% @collections.each do |collection| %>
          <div class="group relative">
            <%= link_to collection, class: "block hover:scale-105 transition-transform duration-200" do %>
              <%= render collection %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m0 0l4-4m-4 4l4 4m6-4h8" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t('collections.index.no_collections') %></h3>
        <p class="mt-1 text-sm text-gray-500"><%= t('collections.index.no_collections_description') %></p>
      </div>
    <% end %>
  </div>
</div>
