<%= form_with(
  model: round,
  url: round.persisted? ? settlement.gathering_round_path(@gathering, round) : settlement.gathering_rounds_path(@gathering),
  class: "space-y-6"
) do |form| %>

  <% if round.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 text-red-700 dark:text-red-200 px-4 py-3 rounded-md">
      <ul class="list-disc pl-5 space-y-1 text-sm">
        <% round.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "라운드 이름", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <%= form.text_field :name, placeholder: "예: 1차 고기, 2차 술", autofocus: true,
        class: "w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 rounded-md px-3 py-2 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <%= form.hidden_field :position %>

  <div class="flex items-center gap-3">
    <%= form.submit round.persisted? ? "라운드 수정" : "라운드 추가",
        class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 dark:hover:bg-blue-500 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-800" %>
    <%= link_to "취소", round.persisted? ? settlement.gathering_round_path(@gathering, round) : settlement.gathering_path(@gathering),
        class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-md border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" %>
  </div>
<% end %>
