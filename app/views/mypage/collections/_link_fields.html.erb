<div class="link-fields border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 rounded-md p-4 space-y-3" data-nested-form-target="item">
  <%= form.hidden_field :id %>
  
  <div>
    <%= form.label :title, t('activerecord.attributes.link.title'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <%= form.text_field :title, 
                        placeholder: t('forms.placeholders.link.title'),
                        class: "w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div>
    <%= form.label :url, t('activerecord.attributes.link.url'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <%= form.url_field :url, 
                       placeholder: t('forms.placeholders.link.url'),
                       class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div>
    <%= form.label :description, t('activerecord.attributes.link.description'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <%= form.text_area :description, 
                       rows: 2, 
                       placeholder: t('forms.placeholders.link.description'),
                       class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="flex justify-end">
    <%= form.hidden_field :_destroy, value: "0", data: { nested_form_target: "destroyField" } %>
    <%= link_to t('templates.actions.delete_resource', resource: t('activerecord.models.link')), "#", 
                data: { action: "click->nested-form#remove_association" },
                class: "text-sm text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300" %>
  </div>
</div>