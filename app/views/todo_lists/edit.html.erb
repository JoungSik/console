<% content_for :title, t('templates.titles.edit', resource: t('navigation.todo_links')) %>

<div class="w-full">
  <div class="mb-6">
    <%= link_to @todo_list, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <%= t('templates.titles.show', resource: t('navigation.todo_links')) %>
    <% end %>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-900"><%= t('templates.titles.edit', resource: t('navigation.todo_links')) %></h1>
        <% if @todo_list.archived_at.present? %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
            <%= t('messages.todo_lists.archived') %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="p-6">
      <%= render "form", todo_list: @todo_list %>
    </div>
  </div>
</div>
