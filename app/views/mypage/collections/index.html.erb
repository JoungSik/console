<% content_for :title, t('templates.titles.my_index', resource: t('activerecord.models.collection')) %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('templates.titles.my_index', resource: t('activerecord.models.collection')) %></h1>
    <%= link_to new_mypage_collection_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium hover:bg-blue-500 transition-colors" do %>
      <%= t('templates.actions.new_resource_create', resource: t('activerecord.models.collection')) %>
    <% end %>
  </div>

  <div id="collections" class="mt-8">
    <% if @collections.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
        <% @collections.each do |collection| %>
          <div class="group relative">
            <%= link_to mypage_collection_path(collection), class: "block hover:scale-105 transition-transform duration-200" do %>
              <%= render 'collection', collection: collection %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m0 0l4-4m-4 4l4 4m6-4h8" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t('templates.empty_states.no_my_resources', resource: t('activerecord.models.collection')) %></h3>
        <p class="mt-1 text-sm text-gray-500"><%= t('messages.common.first_item_description', resource: t('activerecord.models.collection')) %></p>
        <div class="mt-6">
          <%= link_to new_mypage_collection_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
            <%= t('templates.actions.new_resource_create', resource: t('activerecord.models.collection')) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
