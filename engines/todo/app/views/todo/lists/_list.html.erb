<div id="<%= dom_id list %>" class="w-full bg-white dark:bg-gray-800 p-4 sm:p-5 rounded-lg border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-md transition-shadow">
  <div class="space-y-3">
    <h3 class="text-base sm:text-lg font-semibold text-gray-900 dark:text-white truncate">
      <%= list.title.presence || '제목 없음' %>
    </h3>

    <% if list.archived? %>
      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 w-fit">보관됨</span>
    <% end %>

    <% if list.displayed_items.any? %>
      <div class="border-t border-gray-200 dark:border-gray-700 pt-3 space-y-2">
        <div class="space-y-1 max-h-24 overflow-y-auto">
          <% list.displayed_items.each do |item| %>
            <div class="flex items-center gap-2 text-xs">
              <div class="flex-shrink-0">
                <% if item.completed? %>
                  <div class="w-3 h-3 bg-green-500 rounded border border-green-500 flex items-center justify-center">
                    <svg class="w-2 h-2 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                <% else %>
                  <div class="w-3 h-3 border border-gray-300 dark:border-gray-600 rounded"></div>
                <% end %>
              </div>
              <span class="text-gray-700 dark:text-gray-300 truncate <%= item.completed? ? 'line-through text-gray-500 dark:text-gray-400' : '' %>">
                <%= item.title %>
              </span>
              <% if item.url? %>
                <%= lucide_icon "link", class: "w-3 h-3 text-blue-500 dark:text-blue-400 flex-shrink-0" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="border-t border-gray-200 dark:border-gray-700 pt-3">
        <p class="text-xs text-gray-500 dark:text-gray-400 italic">아직 할 일이 없습니다.</p>
      </div>
    <% end %>
  </div>
</div>
