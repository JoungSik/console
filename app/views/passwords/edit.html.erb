<div class="flex items-center justify-center min-h-[calc(100vh-12rem)]">
  <div class="mx-auto md:w-2/3 w-full max-w-md p-8 bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">

    <h1 class="font-bold text-4xl text-center mb-6 text-gray-900 dark:text-white"><%= t("forms.buttons.reset_password") %></h1>

    <%= form_with url: password_path(params[:token]), method: :put, class: "contents" do |form| %>
      <div class="my-5">
        <%= form.password_field :password, required: true, autocomplete: "new-password",
                                placeholder: t("forms.placeholders.new_password"),
                                class: "block shadow-sm rounded-md border border-gray-400 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-solid focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password",
                                placeholder: t("forms.placeholders.repeat_password"),
                                class: "block shadow-sm rounded-md border border-gray-400 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-solid focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
        <%= form.submit t("forms.buttons.reset_password"), class: "w-full text-center rounded-lg px-4 py-3 bg-blue-700 hover:bg-blue-600 text-white inline-block font-semibold cursor-pointer shadow-md transition duration-200 ease-in-out transform hover:scale-105" %>
      </div>
    <% end %>
  </div>
</div>