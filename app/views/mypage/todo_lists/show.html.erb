<% content_for :title, @todo_list.title.presence || t('messages.common.untitled') %>

<div class="w-full">
  <div class="mb-6">
    <%= link_to mypage_todo_lists_path, class: "inline-flex items-center text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <%= t('templates.actions.back_to_resources', resource: t('navigation.todo_links')) %>
    <% end %>
  </div>

  <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg overflow-hidden border border-gray-200 dark:border-gray-700">
    <div class="p-6 sm:p-8">
      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-6">
        <div class="flex-1 min-w-0">
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white break-words">
            <%= @todo_list.title.presence || t('messages.common.untitled') %>
          </h1>

          <% if @todo_list.archived_at.present? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200">
                <%= t('messages.todo_lists.archived') %>
              </span>
          <% end %>
        </div>

        <div class="mt-4 sm:mt-0 sm:ml-6 flex-shrink-0">
          <div class="flex space-x-2">
            <%= link_to t('actions.edit'), edit_mypage_todo_list_path(@todo_list), class: "inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <%= button_to t('actions.delete'), mypage_todo_list_path(@todo_list), method: :delete, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", data: { turbo_confirm: t('confirmations.delete_resource', resource: t('navigation.todo_links')) } %>
          </div>
        </div>
      </div>

      <% if @todo_list.todos.any? %>
        <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4"><%= t('messages.todo_lists.todos_count', count: @todo_list.todos.count) %></h2>
          <div class="space-y-3">
            <% @todo_list.todos.each do |todo| %>
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md transition-shadow <%= todo.completed? ? 'bg-gray-50 dark:bg-gray-700' : 'bg-white dark:bg-gray-800' %>">
                <div class="flex items-start gap-3">
                  <div class="flex-shrink-0 mt-0.5">
                    <%= button_to mypage_todo_list_todo_path(@todo_list, todo), method: :patch,
                        params: { todo: { completed: !todo.completed? } },
                        remote: true,
                        class: "w-5 h-5 #{todo.completed? ? 'bg-green-500 border-green-500' : 'border-2 border-gray-300 dark:border-gray-600'} rounded flex items-center justify-center hover:#{todo.completed? ? 'bg-green-600' : 'border-gray-400 dark:border-gray-500'} transition-colors cursor-pointer",
                        data: { turbo_method: :patch } do %>
                      <% if todo.completed? %>
                        <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <h3 class="font-medium <%= todo.completed? ? 'text-gray-500 dark:text-gray-400 line-through' : 'text-gray-900 dark:text-white' %>">
                      <%= todo.title %>
                    </h3>
                    <% if todo.due_date.present? %>
                      <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                        <%= t('activerecord.attributes.todo.due_date') %>: <%= l(todo.due_date, format: :short) %>
                      </p>
                    <% end %>
                  </div>
                  <div class="flex-shrink-0 ml-2">
                    <%= button_to mypage_todo_list_todo_path(@todo_list, todo), method: :delete,
                        class: "inline-flex items-center p-1.5 text-gray-400 dark:text-gray-500 hover:text-red-600 dark:hover:text-red-400 transition-colors",
                        data: {
                          turbo_confirm: t('confirmations.delete_resource', resource: '할일'),
                          turbo_method: :delete
                        } do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="text-center py-8 border-t border-gray-200 dark:border-gray-700">
          <p class="text-gray-500 dark:text-gray-400"><%= t('messages.todo_lists.no_todos') %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
