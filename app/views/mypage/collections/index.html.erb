<% content_for :title, t('templates.titles.my_index', resource: t('activerecord.models.collection')) %>

<div class="w-full">
  <div class="flex justify-center sm:justify-start">
    <h1 class="font-bold text-2xl sm:text-4xl"><%= t('templates.titles.my_index', resource: t('activerecord.models.collection')) %></h1>
  </div>

  <div id="collections" class="mt-8">
    <% if @collections.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 lg:gap-6">
        <% @collections.each do |collection| %>
          <div class="group relative">
            <%= link_to mypage_collection_path(collection), class: "block hover:scale-105 transition-transform duration-200" do %>
              <%= render 'collection', collection: collection %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m0 0l4-4m-4 4l4 4m6-4h8" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t('templates.empty_states.no_my_resources', resource: t('activerecord.models.collection')) %></h3>
        <p class="mt-1 text-sm text-gray-500"><%= t('messages.common.first_item_description', resource: t('activerecord.models.collection')) %></p>
      </div>
    <% end %>
  </div>
</div>

<!-- FAB (Floating Action Button) -->
<%= link_to new_mypage_collection_path, class: "fixed #{turbo_native_app? ? 'bottom-6' : 'bottom-20 lg:bottom-6'} right-6 w-14 h-14 bg-blue-600 hover:bg-blue-700 text-white rounded-full shadow-lg hover:shadow-xl transition-all duration-200 flex items-center justify-center z-40" do %>
  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
  </svg>
<% end %>
