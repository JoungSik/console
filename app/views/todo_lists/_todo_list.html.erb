<div id="<%= dom_id todo_list %>" class="w-full bg-white p-4 sm:p-5 rounded-lg border shadow-sm hover:shadow-md transition-shadow">
  <div class="space-y-3">
    <h3 class="text-base sm:text-lg font-semibold text-gray-900 truncate">
      <%= todo_list.title.presence || t('messages.common.untitled') %>
    </h3>

    <% if todo_list.archived_at.present? %>
        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 w-fit">
          <%= t('messages.todo_lists.archived') %>
        </span>
    <% end %>

    <% if todo_list.not_completed_todos.any? %>
      <div class="border-t pt-3 space-y-2">
        <div class="space-y-1 max-h-24 overflow-y-auto">
          <% todo_list.not_completed_todos.each do |todo| %>
            <div class="flex items-center gap-2 text-xs">
              <div class="flex-shrink-0">
                <% if todo.completed? %>
                  <div class="w-3 h-3 bg-green-500 rounded border border-green-500 flex items-center justify-center">
                    <svg class="w-2 h-2 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                <% else %>
                  <div class="w-3 h-3 border border-gray-300 rounded"></div>
                <% end %>
              </div>
              <span class="text-gray-700 truncate <%= todo.completed? ? 'line-through text-gray-500' : '' %>">
                <%= todo.title %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="border-t pt-3">
        <p class="text-xs text-gray-500 italic"><%= t('messages.todo_lists.no_todos') %></p>
      </div>
    <% end %>
  </div>
</div>
