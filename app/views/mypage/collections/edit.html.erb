<% content_for :title, t('templates.titles.edit', resource: t('activerecord.models.collection')) %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to mypage_collection_path(@collection), class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <%= @collection.title.presence || t('messages.common.untitled') %>
    <% end %>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900"><%= t('templates.titles.edit', resource: t('activerecord.models.collection')) %></h1>
    </div>
    
    <div class="p-6">
      <%= render "form", collection: @collection %>
    </div>
  </div>
</div>
