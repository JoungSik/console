<% if resource.errors.any? %>
  <div class="bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 rounded-lg p-4 mb-6">
    <div class="flex items-start">
      <%= lucide_icon "circle-alert", class: "w-5 h-5 text-red-500 dark:text-red-400 mr-2 mt-0.5" %>
      <div class="flex-1">
        <h3 class="text-red-800 dark:text-red-200 font-medium mb-2">
          <%= t("errors.messages.validation_failed", count: resource.errors.count, resource: resource.class.model_name.human) %>
        </h3>
        <ul class="text-red-700 dark:text-red-300 text-sm space-y-1">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
