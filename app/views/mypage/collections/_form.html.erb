<%= form_with(model: [ :mypage, collection ], class: "space-y-6", data: { controller: "nested-form", nested_form_wrapper_selector_value: "#links" }) do |form| %>
  <% if collection.errors.any? %>
    <div id="error_explanation" class="bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 text-red-700 dark:text-red-100 px-4 py-3 rounded-md">
      <h2 class="font-medium mb-2"><%= t('errors.messages.validation_failed', count: collection.errors.count, resource: t('activerecord.models.collection')) %></h2>
      <ul class="text-sm space-y-1">
        <% collection.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex justify-end mb-6">
    <%= form.submit collection.persisted? ? t('templates.actions.update_resource', resource: t('activerecord.models.collection')) : t('templates.actions.create_resource', resource: t('activerecord.models.collection')),
                    class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 dark:hover:bg-blue-500 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-800" %>
  </div>

  <div class="space-y-4">
    <div>
      <%= form.label :title, t('activerecord.attributes.collection.title'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.text_field :title,
                          placeholder: t('forms.placeholders.collection.title'),
                          class: "w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :description, t('activerecord.attributes.collection.description'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.text_area :description,
                         rows: 4,
                         placeholder: t('forms.placeholders.collection.description'),
                         class: "w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="flex items-center">
      <%= form.check_box :is_public, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 rounded" %>
      <%= form.label :is_public, t('activerecord.attributes.collection.is_public'), class: "ml-2 block text-sm text-gray-900 dark:text-white" %>
    </div>

    <div class="space-y-4">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white"><%= t('activerecord.models.link') %></h3>
        <%= link_to t('templates.actions.new_resource_create', resource: t('activerecord.models.link')), "#",
                    data: {
                      action: "click->nested-form#add_association",
                      nested_form_target: "addButton"
                    },
                    class: "inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-800" %>
      </div>

      <div id="links" data-turbo-permanent>
        <%= form.fields_for :links do |link_fields| %>
          <%= render 'link_fields', form: link_fields %>
        <% end %>
      </div>

      <template data-nested-form-target="template">
        <%= form.fields_for :links, Link.new, child_index: 'NEW_RECORD' do |link_fields| %>
          <%= render 'link_fields', form: link_fields %>
        <% end %>
      </template>
    </div>
  </div>
<% end %>
