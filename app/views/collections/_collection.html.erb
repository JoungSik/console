<div id="<%= dom_id collection %>" class="w-full bg-white p-4 rounded-lg border shadow-sm">
  <div class="space-y-2">
    <h3 class="text-lg font-semibold text-gray-900 truncate">
      <%= collection.title.presence || t('collections.collection.untitled') %>
    </h3>
    
    <% if collection.description.present? %>
      <p class="text-sm text-gray-600 line-clamp-2">
        <%= collection.description %>
      </p>
    <% end %>
    
    <div class="flex items-center space-x-2 text-xs text-gray-500">
      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= collection.is_public? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
        <%= collection.is_public? ? t('collections.collection.public') : t('collections.collection.private') %>
      </span>
      <span><%= t('collections.show.created_ago', time_ago: time_ago_in_words(collection.created_at)) %></span>
    </div>
  </div>
</div>
