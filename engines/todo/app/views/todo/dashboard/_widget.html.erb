<div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200">
  <%# 헤더 %>
  <div class="flex items-center justify-between gap-2 px-4 py-3 border-b border-gray-200 dark:border-gray-700">
    <div class="flex items-center gap-2 min-w-0">
      <%= lucide_icon "layout-list", class: "w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0" %>
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white truncate"><%= component.plugin_name %></h2>
    </div>
    <%= link_to "전체보기", todo.root_path, class: "flex-shrink-0 text-sm text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors duration-200" %>
  </div>

  <div class="px-4 py-4">
    <%# 요약 통계 %>
    <div class="grid grid-cols-3 gap-2 mb-4">
      <div class="bg-gray-50 dark:bg-gray-700 rounded-md px-2 py-2 text-center">
        <div class="text-xl font-bold text-gray-900 dark:text-white"><%= component.lists_count %></div>
        <div class="text-xs text-gray-600 dark:text-gray-400">활성 목록</div>
      </div>
      <div class="bg-gray-50 dark:bg-gray-700 rounded-md px-2 py-2 text-center">
        <div class="text-xl font-bold text-gray-900 dark:text-white"><%= component.incomplete_count %></div>
        <div class="text-xs text-gray-600 dark:text-gray-400">미완료</div>
      </div>
      <div class="bg-gray-50 dark:bg-gray-700 rounded-md px-2 py-2 text-center">
        <div class="text-xl font-bold <%= component.overdue_count > 0 ? 'text-red-600 dark:text-red-400' : 'text-gray-900 dark:text-white' %>"><%= component.overdue_count %></div>
        <div class="text-xs text-gray-600 dark:text-gray-400">기한 초과</div>
      </div>
    </div>

    <%# 최근 미완료 항목 %>
    <% if component.recent_items.any? %>
      <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">최근 미완료 항목</h3>
      <ul class="space-y-1.5">
        <% component.recent_items.each do |item| %>
          <li class="flex items-center gap-2 text-sm">
            <span class="w-1.5 h-1.5 rounded-full flex-shrink-0 <%= item.overdue? ? 'bg-red-500 dark:bg-red-400' : 'bg-gray-400 dark:bg-gray-500' %>"></span>
            <span class="text-gray-900 dark:text-white truncate"><%= item.title %></span>
            <% if item.due_date %>
              <span class="text-xs text-gray-500 dark:text-gray-400 flex-shrink-0 ml-auto"><%= item.due_date.strftime("%m/%d") %></span>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-sm text-gray-500 dark:text-gray-400 text-center py-2">미완료 항목이 없습니다.</p>
    <% end %>
  </div>
</div>
