<% content_for :title, @collection.title.presence || t('messages.common.untitled') %>

<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to mypage_collections_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <%= t('templates.actions.back_to_my_resources', resource: t('activerecord.models.collection')) %>
    <% end %>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="p-6 sm:p-8">
      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-6">
        <div class="flex-1 min-w-0">
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 break-words">
            <%= @collection.title.presence || t('messages.common.untitled') %>
          </h1>

          <div class="mt-2 flex items-center">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @collection.is_public? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
              <%= @collection.is_public? ? t('status.public') : t('status.private') %>
            </span>
            <span class="ml-2 text-sm text-gray-500">
              <%= t('messages.common.created_ago', time_ago: time_ago_in_words(@collection.created_at)) %>
            </span>
          </div>
        </div>

        <div class="mt-4 sm:mt-0 sm:ml-6 flex-shrink-0 flex space-x-3">
          <%= link_to edit_mypage_collection_path(@collection), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            <%= t('templates.actions.edit_resource', resource: t('activerecord.models.collection')) %>
          <% end %>
          <%= button_to @collection, method: :delete, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700", data: { turbo_confirm: t('confirmations.delete_resource', resource: t('activerecord.models.collection')) } do %>
            <%= t('templates.actions.delete_resource', resource: t('activerecord.models.collection')) %>
          <% end %>
        </div>
      </div>

      <% if @collection.description.present? %>
        <div class="prose prose-sm sm:prose max-w-none mb-8">
          <p class="text-gray-700 leading-relaxed"><%= simple_format(@collection.description) %></p>
        </div>
      <% end %>

      <% if @collection.links.any? %>
        <div class="border-t pt-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4"><%= t('messages.collections.links_count', count: @collection.links.count) %></h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <% @collection.links.each do |link| %>
              <div class="border rounded-lg p-4 hover:shadow-md transition-shadow">
                <%= link_to link.url, target: "_blank", rel: "noopener", class: "block" do %>
                  <h3 class="font-medium text-gray-900 truncate"><%= link.title.presence || t('messages.common.untitled') %></h3>
                  <p class="text-sm text-gray-500 truncate mt-1"><%= link.url %></p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="text-center py-8 border-t">
          <p class="text-gray-500"><%= t('messages.collections.no_links') %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
