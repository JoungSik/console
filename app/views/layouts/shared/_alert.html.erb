<% if notice.present? %>
  <div data-controller="alert" data-alert-target="alert" data-alert-duration-value="3000"
       class="fixed top-0 left-0 right-0 bg-green-600 text-white p-4 z-50 shadow-lg">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <%= lucide_icon "check-circle", class: "w-5 h-5 mr-2" %>
        <p><%= notice %></p>
      </div>
      <button data-action="click->alert#close" class="ml-4 hover:opacity-75">
        <%= lucide_icon "x", class: "w-5 h-5" %>
      </button>
    </div>
  </div>
<% end %>

