<!-- 모바일 바톰 네비게이션 (모바일 웹 + 네이티브 앱) -->
<div class="lg:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 z-50">
  <nav class="flex">
    <% navigation_items.each do |item| %>
      <% is_active = navigation_item_active?(item) %>
      <%= link_to item[:path],
          class: "flex-1 flex flex-col items-center justify-center py-2 px-1 min-h-[60px] transition-colors duration-150 #{is_active ? 'text-blue-600' : 'text-gray-500 hover:text-gray-700'}" do %>
        <div class="w-6 h-6 mb-1">
          <%= lucide_icon item[:icon], class: "w-full h-full text-current" %>
        </div>
        <span class="text-xs font-medium truncate max-w-full">
          <%= item[:name] %>
        </span>
      <% end %>
    <% end %>
  </nav>
</div>